@model IEnumerable<BigProject.Data.Entities.Cat>

@{
	ViewData["Title"] = "Index";
	ViewData["Author"] = "Serhii Ruban";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
	@Html.ActionLink("Додати кота", "Create", null, htmlAttributes: new {@class="btn btn-sm btn-warning", id="createBtn"})
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.CatName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Gender)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IsVacinated)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Image)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IsDeleted)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Breed)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.CatName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Gender)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsVacinated)
				</td>
				<td style="text-align: center">
					@*@Html.DisplayFor(modelItem => item.Image)*@
					<img class="catimage" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))"
					 alt="@item.CatName">
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsDeleted)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Breed.BreedName)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
