@model double?

<!doctype html>
<html>
<head>
	<title>Fractions</title>
	<meta charset="utf-8" />
	<link rel="stylesheet" href="~/styles.css" />
</head>
<body>
	<div id="centralDiv">
		<h1>Fractions</h1>
		<form id="fractionsForm" method="post">
			<div class="fractionsDiv">
				<div class="fractionDiv">
					<input class="fractionInput" type="text" name="leftTopFractionInput" id="leftTopFractionInput" pattern="\d{1,3}(\.\d{1,2})?" required />
					<hr class="fractionHr" />
					<input class="fractionInput" type="text" name="leftBottomFractionInput" id="leftBottomFractionInput" pattern="\d{1,3}(\.\d{1,2})?" required />
				</div>
				<div class="fractionDiv">
					<input class="fractionInput" type="text" name="rightTopFractionInput" id="rightTopFractionInput" pattern="\d{1,3}(\.\d{1,2})?" required />
					<hr class="fractionHr" />
					<input class="fractionInput" type="text" name="rightBottomFractionInput" id="rightBottomFractionInput" pattern="\d{1,3}(\.\d{1,2})?" required />
				</div>
			</div>
			<h2>Or</h2>
			<button id="addFromFileButton" class="buttonClass">Add from file</button>
			<hr />
			<button type="submit" name="additionSubmitButton" value="addition" class="submitFractionFormButton buttonClass">Addition</button>
			<button type="submit" name="substractionSubmitButton" value="substraction" class="submitFractionFormButton buttonClass">Substraction</button>
			<button type="submit" name="multiplicationSubmitButton" value="multiplication" class="submitFractionFormButton buttonClass">Multiplication</button>
			<button type="submit" name="divisionSubmitButton" value="division" class="submitFractionFormButton buttonClass">Division</button>
			<button type="submit" name="powerSubmitButton" value="power" class="submitFractionFormButton buttonClass">Power</button>
		</form>
		<label for="outputTextArea" id="outputLabelDiv">
			Output:
		</label>
		<br />
		@if (Model is not null)
		{
			<textarea id="outputTextArea" readonly>@Model.ToString()</textarea>
		}
		else
		{
			<textarea id="outputTextArea" readonly>Please make your calculation</textarea>
		}
	</div>
	<script src="~/fractionsScript.js"></script>
</body>
</html>
