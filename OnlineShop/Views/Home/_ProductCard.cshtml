@model Product
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.Photos?.FirstOrDefault()?.PhotoUrl"
                 class="img-fluid rounded-start" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Price.ToString("# EUR")</p>
                <p class="card-text"><small class="text-muted">@Model!.Category!.Title</small></p>
                <form asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.Id">
                    <input type="hidden" value="@Context.Request.Path" name="returnUrl" />
                    <button type="submit" class="btn btn-sm btn-success">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
</div>
