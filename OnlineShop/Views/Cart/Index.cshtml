@model Cart
@{
    int num = 0;
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>№</th>
            <th>Title</th>
            <th>Price</th>
            <th>Count</th>
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (CartItem item in Model.CartItems)
        {
            <tr>
                <td>@(++num)</td>
                <td>@item.Product.Title</td>
                <td>@item.Product.Price.ToString("# EUR")</td>
                <td>@item.Count</td>
                <td>@((item.Count * item.Product.Price).ToString("# EUR"))</td>
                <td>
                    <a asp-action="DeleteFromCart"
                   asp-route-id="@item.Product.Id">Delete from cart</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="4">Total Price:</th>
            <th>@Model.TotalPrice.ToString("# EUR")</th>
            <th></th>
        </tr>
    </tfoot>
</table>